<AnchorPane id="anchor" prefHeight="400.0" prefWidth="600.0" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.UsernameController">
   <children>
      <Label layoutX="10.0" layoutY="8.0" text="Welcome to Tātai!">
         <font>
            <Font name="Ubuntu Mono" size="53.0" />
         </font>
      </Label>
      <AnchorPane id="menuscheme1" layoutX="125.0" layoutY="87.0" prefHeight="250.0" prefWidth="375.0" stylesheets="@application.css">
         <children>
      
            <TextField fx:id="usernameField" layoutX="94.0" layoutY="108.0" promptText="Username" />
            <Label layoutX="14.0" layoutY="14.0" text="User Login" textFill="#bdc7c1">
               <font>
                  <Font name="Ubuntu Mono" size="33.0" />
               </font>
            </Label>
            <Separator layoutX="22.0" layoutY="43.0" prefHeight="14.0" prefWidth="351.0" />
            <Label layoutX="83.0" layoutY="145.0" text="*No Spaces allowed for username" textFill="#ff5050">
               <font>
                  <Font size="11.0" />
               </font>
            </Label>
