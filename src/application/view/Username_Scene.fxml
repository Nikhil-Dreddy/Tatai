               </effect>
            </Button>
            <Button id="quitbutton" layoutX="302.0" layoutY="215.0" mnemonicParsing="false" onAction="#changeSceneToMenu" prefHeight="26.0" prefWidth="65.0" stylesheets="@application.css" text="Quit">
